// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Blog Yazıları Modeli
model Post {
  id        String   @id @default(cuid()) // Güvenli ve eşsiz ID (Modern yaklaşım)
  title     String
  slug      String   @unique // URL'de görünecek kısım (SEO için)
  excerpt   String?  // Yazının kısa özeti (Kartlarda göstermek için)
  content   String   // Yazının tamamı (HTML veya Markdown olabilir)
  coverImage String? // Kapak fotoğrafı linki
  published Boolean  @default(false) // Taslak olarak kaydetme özelliği
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("posts") // Veritabanında tablo adı 'posts' olsun
}

// İleride admin paneli yaparsak diye Admin Modeli (Genişletilebilir yapı)
model Admin {
  id       String @id @default(cuid())
  email    String @unique
  password String 
  name     String?
}